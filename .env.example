# Football Twitter Bot Configuration
# Copy this file to .env and fill in your details

# Twitter Bot Account Credentials
BOT_USERNAME=your_twitter_bot_username
BOT_PASSWORD=your_twitter_bot_password
BOT_EMAIL=your_twitter_bot_email@example.com

# Hugging Face API (Free - get from https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your_huggingface_token

# Web Dashboard Settings
WEB_PORT=3000
ADMIN_PASSWORD=admin123

# Bot Settings
CHECK_INTERVAL_MINUTES=5
MAX_POSTS_PER_RUN=10

# Optional: Discord webhook for error notifications
WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL